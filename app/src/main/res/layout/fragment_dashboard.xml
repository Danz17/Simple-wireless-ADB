<?xml version="1.0" encoding="utf-8"?>
<!--
  TAB 0: DASHBOARD (v1.2.0)
  =========================
  Unified control center merging Local ADB + settings:
  - Quick Status: 4 indicators + current command
  - Quick Toggles: Local ADB, Tailscale, Warpgate
  - Settings: Boot persistence, notification hiding
  - Trusted Devices: Count and manage button
-->
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ============================================ -->
    <!-- SECTION: QUICK STATUS                       -->
    <!-- ============================================ -->
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/section_quick_status"
      android:textSize="12sp"
      android:textStyle="bold"
      android:textColor="?colorPrimary"
      android:letterSpacing="0.1"
      android:layout_marginBottom="12dp" />

    <!-- Status Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/statusCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="16dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Status Indicators Row -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center">

          <!-- Local ADB Indicator -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
              android:id="@+id/indicatorLocalAdb"
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="@drawable/ic_status_inactive" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Local"
              android:textSize="10sp"
              android:textColor="?colorOnSurfaceVariant"
              android:layout_marginTop="4dp" />

          </LinearLayout>

          <!-- Tailscale Indicator -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
              android:id="@+id/indicatorTailscale"
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="@drawable/ic_status_inactive" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tailscale"
              android:textSize="10sp"
              android:textColor="?colorOnSurfaceVariant"
              android:layout_marginTop="4dp" />

          </LinearLayout>

          <!-- Warpgate Indicator -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
              android:id="@+id/indicatorWarpgate"
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="@drawable/ic_status_inactive" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Warpgate"
              android:textSize="10sp"
              android:textColor="?colorOnSurfaceVariant"
              android:layout_marginTop="4dp" />

          </LinearLayout>

          <!-- P2P Indicator -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
              android:id="@+id/indicatorP2p"
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="@drawable/ic_status_inactive" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="P2P"
              android:textSize="10sp"
              android:textColor="?colorOnSurfaceVariant"
              android:layout_marginTop="4dp" />

          </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="?colorOutline"
          android:layout_marginVertical="16dp"
          android:alpha="0.3" />

        <!-- Main Status Display -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical">

          <View
            android:id="@+id/mainStatusIndicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/ic_status_inactive" />

          <TextView
            android:id="@+id/mainStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_disabled"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?colorOnSurface"
            android:layout_marginStart="10dp" />

        </LinearLayout>

        <!-- IP:Port Display -->
        <TextView
          android:id="@+id/ipPortText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="---.---.---.---:5555"
          android:textSize="24sp"
          android:textStyle="bold"
          android:textColor="?colorOnSurface"
          android:fontFamily="monospace"
          android:layout_marginTop="8dp" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Command Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/commandCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:cardBackgroundColor="?colorSurfaceVariant">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/dashboard_command_label"
          android:textSize="12sp"
          android:textColor="?colorOnSurfaceVariant" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="8dp"
          android:gravity="center_vertical">

          <TextView
            android:id="@+id/commandText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/adb_not_active"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:textColor="?colorOnSurface" />

          <com.google.android.material.button.MaterialButton
            android:id="@+id/copyButton"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_copy"
            app:iconSize="20dp"
            app:iconTint="?colorOnSecondaryContainer"
            android:contentDescription="@string/copy_command" />

        </LinearLayout>

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- SECTION: QUICK TOGGLES                      -->
    <!-- ============================================ -->
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/section_quick_toggles"
      android:textSize="12sp"
      android:textStyle="bold"
      android:textColor="?colorPrimary"
      android:letterSpacing="0.1"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="12dp" />

    <!-- Quick Toggles Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/togglesCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="16dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Local ADB Toggle with Port -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical">

          <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/localAdbSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/toggle_local_adb"
            android:textSize="14sp"
            android:textColor="?colorOnSurface" />

          <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/portLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_port">

            <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/portInput"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="number"
              android:text="5555"
              android:textSize="12sp"
              android:maxLength="5" />

          </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="?colorOutline"
          android:layout_marginVertical="12dp"
          android:alpha="0.2" />

        <!-- Tailscale Relay Toggle -->
        <com.google.android.material.materialswitch.MaterialSwitch
          android:id="@+id/tailscaleSwitch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/toggle_tailscale_relay"
          android:textSize="14sp"
          android:textColor="?colorOnSurface" />

        <!-- Divider -->
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="?colorOutline"
          android:layout_marginVertical="12dp"
          android:alpha="0.2" />

        <!-- Warpgate Toggle -->
        <com.google.android.material.materialswitch.MaterialSwitch
          android:id="@+id/warpgateSwitch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/toggle_warpgate"
          android:textSize="14sp"
          android:textColor="?colorOnSurface" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- SECTION: SETTINGS                           -->
    <!-- ============================================ -->
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/section_settings"
      android:textSize="12sp"
      android:textStyle="bold"
      android:textColor="?colorPrimary"
      android:letterSpacing="0.1"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="12dp" />

    <!-- Settings Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/settingsCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="16dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Enable on Boot -->
        <com.google.android.material.materialswitch.MaterialSwitch
          android:id="@+id/bootSwitch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/switch_boot"
          android:textSize="14sp"
          android:textColor="?colorOnSurface" />

        <!-- Divider -->
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="?colorOutline"
          android:layout_marginVertical="12dp"
          android:alpha="0.2" />

        <!-- Hide Developer Notification -->
        <com.google.android.material.materialswitch.MaterialSwitch
          android:id="@+id/hideNotificationSwitch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/settings_hide_notification"
          android:textSize="14sp"
          android:textColor="?colorOnSurface" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/settings_hide_notification_desc"
          android:textSize="11sp"
          android:textColor="?colorOnSurfaceVariant"
          android:layout_marginTop="4dp"
          android:layout_marginStart="48dp" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Root Warning -->
    <TextView
      android:id="@+id/rootWarning"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="@string/error_no_root"
      android:textSize="14sp"
      android:textColor="@color/error"
      android:visibility="gone"
      android:gravity="center" />

    <!-- ============================================ -->
    <!-- SECTION: TRUSTED DEVICES (Bottom)           -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/trustedCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trusted_devices"
            android:textSize="14sp"
            android:textColor="?colorOnSurface" />

          <TextView
            android:id="@+id/trustedCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 devices"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            android:layout_marginTop="2dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/manageDevicesButton"
          style="@style/Widget.Material3.Button.TonalButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/btn_manage" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- SECTION: ADB PAIRING (Android 11+)          -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/pairingCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pairing_card_title"
            android:textSize="14sp"
            android:textColor="?colorOnSurface" />

          <TextView
            android:id="@+id/pairingDescText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pairing_card_description"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            android:layout_marginTop="2dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/pairingButton"
          style="@style/Widget.Material3.Button.TonalButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/btn_start_pairing" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

  </LinearLayout>

</ScrollView>
