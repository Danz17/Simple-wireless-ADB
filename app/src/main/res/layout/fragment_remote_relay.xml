<?xml version="1.0" encoding="utf-8"?>
<!--
  TAB 2: REMOTE RELAY (v1.1.0)
  ============================
  Connection Modes:
  - Tailscale Direct: adb connect <tailscale_ip>:5555
  - Tailscale Relay: adb connect <tailscale_ip>:5556
  - Warpgate: adb connect localhost:5557 (SSH tunnel)
-->
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Section Header: REMOTE ACCESS -->
    <TextView
      android:id="@+id/sectionHeader"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/section_remote_relay"
      android:textSize="12sp"
      android:textStyle="bold"
      android:textColor="?colorPrimary"
      android:letterSpacing="0.1"
      android:layout_marginBottom="12dp" />

    <!-- Connection Mode Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/connectionModeLayout"
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:hint="@string/connection_mode_label">

      <AutoCompleteTextView
        android:id="@+id/connectionModeDropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tailscale Status Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/tailscaleCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="16dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/section_tailscale"
          android:textSize="12sp"
          android:textStyle="bold"
          android:textColor="?colorPrimary"
          android:letterSpacing="0.1" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="12dp"
          android:gravity="center_vertical">

          <View
            android:id="@+id/tailscaleIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/ic_status_inactive" />

          <TextView
            android:id="@+id/tailscaleStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tailscale_not_connected"
            android:textSize="14sp"
            android:textColor="?colorOnSurfaceVariant"
            android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Tailscale IP Address -->
        <TextView
          android:id="@+id/tailscaleIpText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="---"
          android:textSize="24sp"
          android:textStyle="bold"
          android:textColor="?colorOnSurface"
          android:fontFamily="monospace"
          android:layout_marginTop="8dp" />

        <!-- Port info based on mode -->
        <TextView
          android:id="@+id/portInfoText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Port: 5555"
          android:textSize="14sp"
          android:textColor="?colorOnSurfaceVariant"
          android:layout_marginTop="4dp" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Relay Server Switch (only for Tailscale Relay mode) -->
    <com.google.android.material.materialswitch.MaterialSwitch
      android:id="@+id/relaySwitch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="@string/switch_relay"
      android:textSize="16sp"
      android:textColor="?colorOnSurface"
      android:visibility="gone" />

    <!-- Warpgate Configuration Card (shown when Warpgate mode selected) -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/warpgateCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:visibility="gone"
      app:cardCornerRadius="16dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/warpgate_title"
          android:textSize="12sp"
          android:textStyle="bold"
          android:textColor="?colorPrimary"
          android:letterSpacing="0.1"
          android:layout_marginBottom="16dp" />

        <!-- Warpgate Host -->
        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/warpgateHostLayout"
          style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/warpgate_host_hint">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/warpgateHostInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Warpgate Port -->
        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/warpgatePortLayout"
          style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:hint="@string/warpgate_port_hint">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/warpgatePortInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="8443"
            android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Warpgate Username -->
        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/warpgateUsernameLayout"
          style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:hint="@string/warpgate_username_hint">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/warpgateUsernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Warpgate Password -->
        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/warpgatePasswordLayout"
          style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:hint="@string/warpgate_password_hint"
          app:endIconMode="password_toggle">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/warpgatePasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Warpgate Target Name -->
        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/warpgateTargetLayout"
          style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:hint="@string/warpgate_target_hint">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/warpgateTargetInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="adb"
            android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Connect/Disconnect Button -->
        <com.google.android.material.button.MaterialButton
          android:id="@+id/warpgateConnectButton"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:layout_marginTop="16dp"
          android:text="@string/btn_connect"
          android:textSize="16sp" />

        <!-- Warpgate Status -->
        <TextView
          android:id="@+id/warpgateStatusText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/warpgate_disconnected"
          android:textSize="12sp"
          android:textColor="?colorOnSurfaceVariant"
          android:layout_marginTop="8dp"
          android:layout_gravity="center_horizontal" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- P2P Token Card (shown when P2P Token mode selected) -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/p2pCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:visibility="gone"
      app:cardCornerRadius="16dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/p2p_title"
          android:textSize="12sp"
          android:textStyle="bold"
          android:textColor="?colorPrimary"
          android:letterSpacing="0.1"
          android:layout_marginBottom="8dp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/p2p_description"
          android:textSize="12sp"
          android:textColor="?colorOnSurfaceVariant"
          android:layout_marginBottom="16dp" />

        <!-- Token Display Section -->
        <LinearLayout
          android:id="@+id/p2pTokenSection"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="gone">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/p2p_token_label"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
              android:id="@+id/p2pTokenText"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/p2p_token_placeholder"
              android:textSize="28sp"
              android:textStyle="bold"
              android:textColor="?colorOnSurface"
              android:fontFamily="monospace"
              android:letterSpacing="0.15" />

            <com.google.android.material.button.MaterialButton
              android:id="@+id/p2pShowHideButton"
              style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
              android:layout_width="40dp"
              android:layout_height="40dp"
              app:icon="@drawable/ic_visibility"
              app:iconSize="20dp"
              android:contentDescription="@string/p2p_show_token" />

            <com.google.android.material.button.MaterialButton
              android:id="@+id/p2pCopyButton"
              style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_marginStart="4dp"
              app:icon="@drawable/ic_copy"
              app:iconSize="20dp"
              android:contentDescription="@string/p2p_copy_token" />

          </LinearLayout>

          <!-- Token expiration -->
          <TextView
            android:id="@+id/p2pExpiresText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/p2p_status_idle"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            android:layout_marginTop="8dp" />

          <!-- Revoke button -->
          <com.google.android.material.button.MaterialButton
            android:id="@+id/p2pRevokeButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/p2p_revoke_token" />

        </LinearLayout>

        <!-- Generate Token Button (shown when no token) -->
        <com.google.android.material.button.MaterialButton
          android:id="@+id/p2pGenerateButton"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:text="@string/p2p_generate_token"
          android:textSize="16sp" />

        <!-- Divider -->
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginVertical="20dp"
          android:background="?colorOutlineVariant" />

        <!-- Connect with Token Section -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/p2p_connect_with_token"
          android:textSize="14sp"
          android:textStyle="bold"
          android:textColor="?colorOnSurface"
          android:layout_marginBottom="12dp" />

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/p2pTokenInputLayout"
          style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/p2p_token_input_hint">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/p2pTokenInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:maxLength="11" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/p2pConnectButton"
          style="@style/Widget.Material3.Button.TonalButton"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginTop="12dp"
          android:text="@string/btn_connect" />

        <!-- P2P Status -->
        <TextView
          android:id="@+id/p2pStatusText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/p2p_status_idle"
          android:textSize="12sp"
          android:textColor="?colorOnSurfaceVariant"
          android:layout_marginTop="8dp"
          android:layout_gravity="center_horizontal" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Remote Command Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/remoteCommandCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:cardBackgroundColor="?colorSurfaceVariant">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/remote_command_label"
          android:textSize="12sp"
          android:textColor="?colorOnSurfaceVariant" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="8dp"
          android:gravity="center_vertical">

          <TextView
            android:id="@+id/remoteCommandText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="adb connect ..."
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:textColor="?colorOnSurface" />

          <com.google.android.material.button.MaterialButton
            android:id="@+id/remoteCopyButton"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_copy"
            app:iconSize="20dp"
            app:iconTint="?colorOnSecondaryContainer"
            android:contentDescription="@string/copy_command" />

        </LinearLayout>

        <!-- Port info text (legacy) -->
        <TextView
          android:id="@+id/relayPortText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/relay_port_label"
          android:textSize="12sp"
          android:textColor="?colorOnSurfaceVariant"
          android:layout_marginTop="8dp"
          android:visibility="gone" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Notification Hiding Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/notificationCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/settings_notification_title"
          android:textSize="12sp"
          android:textStyle="bold"
          android:textColor="?colorPrimary"
          android:letterSpacing="0.1" />

        <com.google.android.material.materialswitch.MaterialSwitch
          android:id="@+id/hideNotificationSwitch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:text="@string/settings_hide_notification"
          android:textSize="14sp"
          android:textColor="?colorOnSurface" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/settings_hide_notification_desc"
          android:textSize="12sp"
          android:textColor="?colorOnSurfaceVariant"
          android:layout_marginTop="4dp" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Trusted Devices Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/trustedDevicesCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:strokeWidth="1dp"
      app:strokeColor="?colorOutline"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/trusted_devices"
          android:textSize="14sp"
          android:textColor="?colorOnSurface" />

        <TextView
          android:id="@+id/trustedCountText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textSize="16sp"
          android:textStyle="bold"
          android:textColor="?colorPrimary" />

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Pending Approval Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/pendingCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:visibility="gone"
      app:cardCornerRadius="12dp"
      app:cardElevation="0dp"
      app:strokeWidth="2dp"
      app:strokeColor="@color/warning_orange"
      app:cardBackgroundColor="?colorSurface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/pending_approval"
          android:textSize="12sp"
          android:textStyle="bold"
          android:textColor="@color/warning_orange"
          android:letterSpacing="0.1" />

        <TextView
          android:id="@+id/pendingIpText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/pending_device_message"
          android:textSize="14sp"
          android:textColor="?colorOnSurface"
          android:layout_marginTop="8dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="12dp"
          android:gravity="end">

          <com.google.android.material.button.MaterialButton
            android:id="@+id/denyButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_deny"
            android:layout_marginEnd="8dp" />

          <com.google.android.material.button.MaterialButton
            android:id="@+id/approveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_approve" />

        </LinearLayout>

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

  </LinearLayout>

</ScrollView>
